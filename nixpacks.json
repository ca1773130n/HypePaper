{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_20", "python311"]
    },
    "install": {
      "cmds": ["npm i"]
    },
    "build": {
      "cmds": [
        "python -m venv venv",
        "venv/bin/pip install -r backend/requirements.txt"
      ]
    }
  },
  "start": {
    "cmd": "venv/bin/python backend/src/main.py || cd backend && /app/venv/bin/uvicorn src.main:app --host 0.0.0.0 --port $PORT"
  }
}
