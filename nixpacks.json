{
  "phases": {
    "setup": {
      "nixPkgs": ["python311"]
    },
    "install": {
      "cmds": [
        "python3 -m ensurepip --upgrade",
        "python3 -m pip install --upgrade pip setuptools wheel"
      ]
    },
    "build": {
      "cmds": [
        "python3 -m pip install -r backend/requirements.prod.txt --no-cache-dir"
      ]
    }
  },
  "start": {
    "cmd": "cd backend && python3 -m uvicorn src.main:app --host 0.0.0.0 --port $PORT"
  }
}
