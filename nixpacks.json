{
  "phases": {
    "setup": {
      "nixPkgs": [
        "python311",
        "python311Packages.pip"
      ]
    },
    "install": {
      "cmds": []
    },
    "build": {
      "cmds": [
        "pip install --upgrade pip",
        "pip install -r backend/requirements.prod.txt --no-cache-dir"
      ]
    }
  },
  "start": {
    "cmd": "cd backend && uvicorn src.main:app --host 0.0.0.0 --port $PORT"
  }
}
