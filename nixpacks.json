{
  "phases": {
    "setup": {
      "nixPkgs": ["python311", "gcc", "stdenv.cc.cc.lib"]
    },
    "install": {
      "cmds": [
        "python3 -m venv /opt/venv",
        "/opt/venv/bin/pip install --upgrade pip setuptools wheel"
      ]
    },
    "build": {
      "cmds": [
        "/opt/venv/bin/pip install -r backend/requirements.prod.txt --no-cache-dir"
      ]
    }
  },
  "start": {
    "cmd": "cd backend && /opt/venv/bin/uvicorn src.main:app --host 0.0.0.0 --port $PORT"
  }
}
