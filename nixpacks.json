{
  "phases": {
    "setup": {
      "nixPkgs": ["nodejs_20", "python311", "python311Packages.pip"]
    },
    "install": {
      "cmds": ["npm i"]
    },
    "build": {
      "cmds": ["cd backend && pip install -r requirements.txt"]
    }
  },
  "start": {
    "cmd": "cd backend && uvicorn src.main:app --host 0.0.0.0 --port $PORT"
  }
}
