# Supabase Configuration (REQUIRED for authentication)
# Get these values from your Supabase project dashboard:
# https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@db.your-project-ref.supabase.co:5432/postgres

# GitHub Token (for repository API access)
GITHUB_TOKEN=your-github-personal-access-token

# JWT Configuration (optional, Supabase handles authentication)
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# LLM Provider Configuration
LLM_PROVIDER=llamacpp
LLAMACPP_SERVER=http://localhost:10002/v1/chat/completions

# PDF Storage
PDF_STORAGE_PATH=./data/papers

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Upstash Redis Configuration (REQUIRED for async crawler jobs)
# Sign up at https://upstash.com/ and create a Redis database
# Get these values from Upstash Console > Your Database > REST API
UPSTASH_REDIS_REST_URL=https://your-database-name.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-rest-token-here

# Redis Configuration (for caching and Celery background jobs)
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Environment (affects CORS and OAuth redirect URLs)
ENVIRONMENT=development
# Set to 'production' for Railway deployment
# Railway will automatically set RAILWAY_STATIC_URL for preview deployments
